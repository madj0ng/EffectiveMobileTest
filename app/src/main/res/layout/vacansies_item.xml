<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ListItem"
    android:layout_marginTop="@dimen/dim_16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dim_16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dim_16dp" />

    <TextView
        android:id="@+id/tvViewers"
        style="@style/Text1Green"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_16dp"
        app:layout_constraintEnd_toStartOf="@+id/ivFavorite"
        app:layout_constraintStart_toEndOf="@+id/left_guideline"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Сейчас просматривает 1 человек" />

    <ImageView
        android:id="@+id/ivFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvViewers"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toEndOf="@+id/tvViewers"
        app:layout_constraintTop_toTopOf="@+id/tvViewers"
        app:srcCompat="@drawable/ic_favorite_default" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Title3White"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_10dp"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toEndOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/tvViewers"
        tools:text="UI/UX Designer" />

    <TextView
        android:id="@+id/tvTown"
        style="@style/Text1White"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_10dp"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toEndOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:text="Минск" />

    <TextView
        android:id="@+id/tvCompany"
        style="@style/Text1White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/ivCompanyClock"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/tvTown"
        tools:text="Мобирикс" />

    <ImageView
        android:id="@+id/ivCompanyClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvCompany"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toEndOf="@+id/tvCompany"
        app:layout_constraintTop_toTopOf="@+id/tvCompany"
        app:srcCompat="@drawable/ic_clock_default" />

    <ImageView
        android:id="@+id/ivExperienceImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvExperience"
        app:layout_constraintEnd_toStartOf="@+id/tvExperience"
        app:layout_constraintStart_toEndOf="@+id/left_guideline"
        app:layout_constraintTop_toTopOf="@+id/tvExperience"
        app:srcCompat="@drawable/ic_suitcase_default" />

    <TextView
        android:id="@+id/tvExperience"
        style="@style/Text1White"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_8dp"
        android:layout_marginTop="@dimen/dim_10dp"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toEndOf="@+id/ivExperienceImage"
        app:layout_constraintTop_toBottomOf="@id/tvCompany"
        tools:text="Опыт от 1 года до 3 лет" />

    <TextView
        android:id="@+id/tvPublishedDate"
        style="@style/Text1Gray3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_10dp"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toEndOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/tvExperience"
        tools:text="Опубликовано 16 февраля" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ivRespond"
        style="@style/RespondButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/dim_32dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:layout_marginBottom="@dimen/dim_16dp"
        android:text="@string/button_respond"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
        app:layout_constraintStart_toEndOf="@+id/left_guideline"
        app:layout_constraintTop_toBottomOf="@+id/tvPublishedDate" />

</androidx.constraintlayout.widget.ConstraintLayout>