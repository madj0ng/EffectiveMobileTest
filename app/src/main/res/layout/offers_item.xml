<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dim_132dp"
    android:layout_height="@dimen/dim_120dp"
    android:layout_marginEnd="@dimen/dim_8dp"
    style="@style/ListItem">

    <ImageView
        android:id="@+id/ivOffer"
        android:layout_width="@dimen/dim_32dp"
        android:layout_height="@dimen/dim_32dp"
        android:layout_marginStart="@dimen/dim_8dp"
        android:layout_marginEnd="@dimen/dim_8dp"
        android:layout_marginTop="@dimen/dim_10dp"
        android:background="@drawable/sh_oval"
        android:padding="@dimen/dim_8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvOffer"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_profile_default" />

    <TextView
        android:id="@+id/tvOffer"
        style="@style/Title4White"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_8dp"
        android:layout_marginEnd="@dimen/dim_8dp"
        android:layout_marginTop="@dimen/dim_16dp"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivOffer"
        tools:text="Вакансии рядом с вами" />

    <TextView
        android:id="@+id/tvOfferButtom"
        style="@style/Text1Green"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_8dp"
        android:layout_marginEnd="@dimen/dim_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOffer"
        tools:text="Поднять" />

</androidx.constraintlayout.widget.ConstraintLayout>